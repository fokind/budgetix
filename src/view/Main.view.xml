<mvc:View controllerName="fokind.budgetix.controller.Main" displayBlock="true" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
  <List id="list" items="{/Records}" noDataText="-">
    <items>
      <ObjectListItem number="{Amount}" title="{Name}">
        <attributes>
          <ObjectAttribute text="Every {Every} {LengthInterval} from {Date}" />
        </attributes>
      </ObjectListItem>
    </items>
  </List>
</mvc:View>